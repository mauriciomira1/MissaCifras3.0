// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ChordsList {
  id      String  @id @default(cuid())
  acorde  String
  Cifra   Cifra?  @relation(fields: [cifraId], references: [id])
  cifraId String?
}

model Artista {
  id           String         @id @default(cuid())
  nome         String
  qtdDeCliques Int
  capa         String
  cifras       ArtistaCifra[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @default(now())
}

model Cifra {
  id               String         @id @default(cuid())
  musica           String
  slug             String
  versao           String?
  compositor       String?
  tom              String
  bpm              Int?
  video            String?
  letra            String
  cifra            String
  acordes          ChordsList[]
  artistas         ArtistaCifra[]
  thumbnail        String?
  hashtags         String[]
  classificacao    String[]
  liturgica        Boolean
  qtdDeCliques     Int
  usuarioQueEnviou User           @relation(fields: [userId], references: [id])
  userId           String
  Playlist         Playlist[]
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @default(now())
}

model ArtistaCifra {
  artista   Artista @relation(fields: [artistaId], references: [id])
  artistaId String
  cifra     Cifra   @relation(fields: [cifraId], references: [id])
  cifraId   String

  @@id([artistaId, cifraId])
}

model User {
  id        String     @id @default(cuid())
  nome      String
  foto      String
  Playlist  Playlist[]
  Cifra     Cifra[]
  createdAt DateTime   @default(now())
}

model Playlist {
  id        String   @id @default(cuid())
  nome      String
  cifras    Cifra    @relation(fields: [cifraId], references: [id])
  cifraId   String
  criadoPor User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
